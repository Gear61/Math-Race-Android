<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="my_stats_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="my_stats_right_wrong">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="my_stats_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="contentPadding">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="my_stats_header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="my_stats_data">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="cardview_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>