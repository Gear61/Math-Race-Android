<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/super_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/single_list_layout" />

    <com.github.clans.fab.FloatingActionMenu
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pick_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        app:layout_behavior="com.randomappsinc.mathrace.Animations.FABMenuBehavior"
        fab:menu_fab_label="@string/pick_race"
        fab:menu_colorNormal="@color/app_blue"
        fab:menu_colorPressed="@color/light_blue">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/addition_race"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_label="@string/addition"
            app:fab_colorNormal="@color/app_blue"
            app:fab_colorPressed="@color/light_blue"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/subtraction_race"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_label="@string/subtraction"
            app:fab_colorNormal="@color/app_blue"
            app:fab_colorPressed="@color/light_blue"/>
    </com.github.clans.fab.FloatingActionMenu>
</android.support.design.widget.CoordinatorLayout>